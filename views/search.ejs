<div class="w-full flex justify-center pt-4">
    <div class=" w-10/12 md:w-6/12 flex flex-col gap-6 justify-center items-start">
        <h1 style="font-size: 28px;font-weight: 500;text-align: center;">Search Post</h1>
        <ul class="w-full overflow-y-scroll" style="height: 300px;">
            <% Data.forEach(post => { %>
             <a href="/post/<%= post._id %>">
                <li class="flex w-full justify-between items-center py-4 border-b hover:bg-gray-200 hover:cursor-pointer ease-in-out duration-4000">
                    <h1 style="font-size: 18px;font-weight: 500; color: #3b3a34;background-color: transparent;"><%= post.title %></h1>
                    <span style="font-size: 15px; color: #3b3a34;background-color: transparent;"><%= post.createdAt.toDateString() %></span>
                </li>
             </a>   
            <% }) %>
        </ul>    
    </div>
</div>
