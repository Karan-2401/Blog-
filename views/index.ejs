<div class="flex flex-col gap-4 w-full px-6 sm:px-8 md:px-10 justify-center items-center">
    <h1 style="font-size: 35px; font-weight: 500;">Hi, I am Karan.</h1>
    <span style="font-size: 16px;">Web Developer and Digital Marketer</span>
</div>
<div class="flex justify-center items-center py-8">
    <img src="img/img.jpg" alt="" class="rounded-md w-10/12 sm:w-6/12">
</div>
<div class="w-full flex justify-center">
    <div class=" w-10/12 md:w-6/12 flex flex-col gap-4 justify-center items-start">
        <h1 style="font-size: 25px;font-weight: 500;">Latest Post</h1>
        <ul class="w-full overflow-y-scroll" style="height: 300px;">
            <% Data.forEach(post => { %>
             <a href="/post/<%= post._id %>">
                <li class="flex w-full justify-between items-center py-4 border-b hover:bg-gray-200 hover:cursor-pointer ease-in-out duration-4000">
                    <h1 style="font-size: 18px;font-weight: 500; color: #3b3a34;background-color: transparent;"><%= post.title %></h1>
                    <span style="font-size: 15px; color: #3b3a34;background-color: transparent;"><%= post.createdAt.toDateString() %></span>
                </li>
             </a>   
            <% }) %>
        </ul>
        <% if (cheack  == null) { %>
            <button class="pt-4" style="font-size: 14px; font-weight: 500;"><a href="/?page=<%= newPage %>" class="hover:text-blue-600"><i class="fa fa-angle-left" aria-hidden="true"></i> Older Posts</a></button>
        <% } %>
        
    </div>
</div>
